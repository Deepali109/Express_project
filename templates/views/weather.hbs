<!DOCTYPE html>
<html lang="en">

<head>
   {{>headerlinks}}
</head>

<style>
   *{
    margin: 0px;
    padding: 0px;
}
.container-fluid{
    padding-left: 3rem;
    padding-right: 3rem;
    /* background-color: rgb(70, 70, 70); */
}
.container-fluid a{
    font-size: 20px;
    font-weight: 400;
    color: rgb(230, 233, 235);
}
.container-fluid a:hover{
    color: rgb(197, 197, 197);
    font-size: 21px;
}

:root{
    --main-bg: #1e272e;
}
.navbar-collapse{
    flex-grow: 1;
    align-items: center;
    justify-content: end;
}
.navbar{
    color: #fff;
    background-color:var(--main-bg)
}

.navbar-toggler{
    background-color: #e0dede;
}
.fa-snowflake{
 transition: all linear;
 animation: rot 2s linear infinite;
 color: rgb(36, 120, 245);
}
@keyframes rot{
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(360deg);
    }
}

footer{
    width: 100%;
    background-color:var(--main-bg);
    margin-top: auto;
}
footer p{
    margin: auto;
    text-align: center;
    color: #e0dede;
    line-height: 2.7rem;
    font-size: 1.1rem;
}
.container{
    width: 100vw;
    height: 89vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.left_container{
    border: 1px solid black;
    border-radius: 20px;
    background-color: #1e272e;
}
.main_content{
    padding:1px;

}
#cityname{
    color: white;
    width: 350px;
    padding:10px;
    border-radius: 20px;
    background-color: #1e272e;
    border: none;
    outline: none;
    
}
::placeholder{
    color: #e0dede;
}
#submitbtn{
    width: 80px;
    border: 1px solid #1e272e;
    border-radius: 20px;
    padding: 9px;
    background-color:rgb(59, 127, 230);
    color: #fff;
}
#submitbtn:hover{
    color: rgb(59, 127, 230);
    background-color: #fff;
}
.tempinformation{
    margin-top: 5px;
    height: 220px;
    width: 300px;
    border: 1px solid black;
    color: hwb(0 97% 3%);
    background-color:  #353a3d;
    border-radius: 10px;
}
.top_layer{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 0px 8px;
    padding-top: 5px;
    border: 1px solid #1e272e;
    background-color: #1e272e;
    border-radius: 8px;
}
.main_layer #city_name{
    color: #e0dede;
    padding: 0 1rem;
    padding-top: 1rem;
    font-weight: 300;
    font-size: 2rem;
}
.middle_layer{
    display: flex;
    justify-content: space-around;
    color: #e0dede;

}
.main_layer .middle_layer p,.main_layer .middle_layer .fa{
    font-size: 2.5rem;
    font-weight: 900;
}
.data_hide{
    visibility: hidden;
    transition: all 0.3s linear;
}

</style>
<body>
       {{>navbar}}

      <!-- header section  -->
      <div class="container">
       
          <div class="left_container">
           <div class="main_content">
            <form class'temp_form'>
                <input type="text" id="cityname" placeholder="Enter your city name" autocomplete="off">
                <input type="submit" value="Search" id="submitbtn">
            </form>
           </div>
        
       </div>
        <div class="tempinformation">
            <div class="top_layer">
                <p id="day">Sunday</p>
                <p><span id="today_data">10</span> <span id="month_name">Oct</span></p>
            </div>
             <div class="main_layer ">
                <p id="city_name">Get Output Here</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa-solid fa-cloud-showers-water" aria-hidden="true"></i></p>
                </div>
             </div>
        
        </div>
      </div>
    

      <!-- footer -->
      {{>footer}}
      

      {{!-- ---- script--- --}}
        <script>
            const submitbtn = document.getElementById('submitbtn');
            const cityname = document.getElementById('cityname');
            const city_name = document.getElementById('city_name');
            const  temp_real_val = document.getElementById('temp_real_val');
            const  temp_status = document.getElementById('temp_status');
            const datahide = document.querySelector('.middle_layer')

            const getInfo = async(event) => {
             event.preventDefault();
             let cityVal = cityname.value;
                     
            if(cityVal === ""){
                  city_name.innerText = `Please write the name before search`;
                  datahide.classList.add('data_hide');
            }else{
                try{
                  let url = `http://api.openweathermap.org/data/2.5/weather?q=${cityVal}&units=metric&appid=eb75f38ec8b0e6b4210261cca3baad4e`;
                  const response = await fetch(url);
                  const data = await response.json();
                  const arrData = [data];  // converting data into array

                  city_name.innerText = `${arrData[0].name}, ${arrData[0].sys.country}`;
                  temp_real_val.innerText = arrData[0].main.temp;
                  {{!-- temp_status.innerText = arrData[0].weather[0].main; --}}
                  const tempMood = arrData[0].weather[0].main;

                  //condition to check sunny or cloudy
                  if(tempMood == "Clear"){
                    temp_status.innerHTML = '<i class="fa-solid fa-sun" style="color: #d8e151;"></i>'
                  } else if (tempMood =="Clouds"){
                    temp_status.innerHTML = '<i class="fa-solid fa-cloud-sun" style="color: #5089ed;"></i>';
                  }else if(tempMood =="Rain")
                     {temp_status.innerHTML = '<i class="fa-solid fa-cloud-rain" style="color: #3475e5;"></i>';
                  }else if(tempMood =="Mist"){
                    temp_status.innerHTML = '<i class="fa-solid fa-smog" style="color: #6dbfe8;"></i>'
                  }
                  else{
                    temp_status.innerHTML = '<i class="fa-solid fa-sun" style="color: #d8e151;"></i>'
                  }
                  datahide.classList.remove('data_hide');

                }catch{
                    city_name.innerText = `Plz enter the city name properly`;
                    datahide.classList.add('data_hide');
                }
              
              
            }   
            }

            submitbtn.addEventListener('click', getInfo);

            const getCurrentDay=() =>{
                let weekday = new Array(7);
                weekday[0] = "Sunday";
                weekday[1]= "Monday";
                weekday[2]= "Tuesday";
                weekday[3]= "Wednesday";
                weekday[4]= "Thursday";
                weekday[5]= "Friday";
                weekday[6]= "Saturday";

                let CurrentTime = new Date();
                days = weekday[CurrentTime.getDay()];
                time = CurrentTime.getDate();
                month =CurrentTime.getMonth();

                let day = document.getElementById('day');
                let todays_time= document.getElementById('today_data');

                todays_time.innerText=time;
                day.innerText=days;
                
            };
            const getCurrentMonth=() =>{
                let montharr = new Array(12);
                montharr[0]="JAN";
                montharr[1]="FEB";
                montharr[2]="MAR";
                montharr[3]="APR";
                montharr[4]="MAY";
                montharr[5]="JUN";
                montharr[6]="JUL";
                montharr[7]="AUG";
                montharr[8]="SEP";
                montharr[9]="OCT";
                montharr[10]="NOV";
                montharr[11]="DEC";
                
                let CurrentTime = new Date();
               month = montharr[CurrentTime.getMonth()];

                let current_month=document.getElementById('month_name');

                current_month.innerText = month;
            }

            getCurrentDay();
            getCurrentMonth();


        </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
   
</body>
</html>

